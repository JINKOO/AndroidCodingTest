<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="book"
            type="com.kjk.quicksampleapp.domain.entity.BookEntity" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/book_imageview"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_margin="@dimen/margin_default"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_baseline_library_books_24" />

        <TextView
            android:id="@+id/title_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_default"
            android:layout_marginEnd="@dimen/margin_default"
            android:layout_marginBottom="@dimen/margin_default"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@{book.title}"
            app:layout_constraintBottom_toTopOf="@id/info_textview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/book_imageview"
            app:layout_constraintTop_toTopOf="@id/book_imageview"
            tools:text="대한민국에 너의 꿈을 가두지 마라" />


        <TextView
            android:id="@+id/info_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_default"
            android:gravity="center"
            android:textSize="18sp"
            android:text="@{book.author}"
            app:layout_constraintBottom_toBottomOf="@id/book_imageview"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/book_imageview"
            app:layout_constraintTop_toBottomOf="@id/title_textview"
            tools:text="김동수" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>